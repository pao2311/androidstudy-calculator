<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FF4B5459">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/result_area"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/TextAreaStyle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#FF5C6265">

        </View>
        <TextView
            android:id="@+id/formula_area"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/TextAreaStyle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
            <TableRow
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/btn_c"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="C"
                    style="@style/DigitalBtn1Style"/>

                <Button
                    android:id="@+id/btn_del"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="DEL"
                    style="@style/DigitalBtn1Style"/>

                <Button
                    android:id="@+id/btn_div"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    style="@style/DigitalBtn1Style"/>

            </TableRow>
            <TableRow
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/btn_7"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_8"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    style="@style/DigitalBtnStyle"/>
                <Button
                    android:id="@+id/btn_9"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    style="@style/DigitalBtnStyle"/>

            </TableRow>
            <TableRow
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/btn_4"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_5"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_6"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    style="@style/DigitalBtnStyle"/>

            </TableRow>
            <TableRow
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/btn_1"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_2"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_3"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    style="@style/DigitalBtnStyle"/>

            </TableRow>
            <TableRow
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/btn_0"
                    android:onClick="onClick"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    style="@style/DigitalBtnStyle"/>

                <Button
                    android:id="@+id/btn_dot"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    style="@style/DigitalBtnStyle"/>


            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_add"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="+"
                style="@style/DigitalBtn2Style"/>
            <Button
                android:id="@+id/btn_sub"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="-"
                style="@style/DigitalBtn2Style"/>
            <Button
                android:id="@+id/btn_mul"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="*"
                style="@style/DigitalBtn2Style"/>
            <Button
                android:id="@+id/btn_equ"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="="
                android:onClick="onClick"
                style="@style/DigitalBtn2Style"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>